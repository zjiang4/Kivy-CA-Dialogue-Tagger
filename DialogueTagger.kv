#:kivy 1.10.0

<MainFrame>:
    id: main_frame
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1  # black
        Rectangle:
            pos: self.pos
            size: self.size
    orientation: 'vertical'
    spacing: 5
    MenuBar:
    DialogueView:
    ButtonBarA:
    ButtonBarB:


<MenuBar>:
    id: menu_bar
    canvas.before:
        Color:
            rgba: 1, 0, 0, 1  # red
        Rectangle:
            pos: self.pos
            size: self.size
    size_hint_y: None
    height: 50

<DialogueView>:
    id: dialogue_view
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1  # white
        Rectangle:
            pos: self.pos
            size: self.size
    size_hint: 1, 0.6
    orientation: 'horizontal'

    Button: # Previous Dialogue Button
        id: prev_btn
        size_hint_x: None
        width: 50
        on_press: root.prev(self)
        Image:
            source: "resources/prev.png"
            center_y: self.parent.center_y
            size_hint_x: None
            width: 50

    DialogueBox: # Dialogue Display Box
        id: dialogue_box
        canvas.before:
            Color:
                rgba: 0, 1, 0, 1  # green
            Rectangle:
                pos: self.pos
                size: self.size
        size_hint: 1, 1
        orientation: 'vertical'

    Button: # Next Dialogue Button
        id: next_btn
        size_hint_x: None
        width: 50
        on_press: root.next(self)
        Image:
            source: "resources/next.png"
            center_y: self.parent.center_y
            center_x: self.parent.center_x
            size_hint_x: None
            width: 50

<ButtonBarA>:
    id: button_bar_a
    canvas.before:
        Color:
            rgba: 53 / 255.0, 53 / 255.0, 53 / 255.0, 1
        Rectangle:
            pos: self.pos
            size: self.size
    size_hint_y: None
    height: 50
    anchor_x: 'center'
    anchor_y: 'center'

<ButtonBarB>:
    id: button_bar_b
    canvas.before:
        Color:
            rgba: 53 / 255.0, 53 / 255.0, 53 / 255.0, 1
        Rectangle:
            pos: self.pos
            size: self.size
    size_hint: 1, 0.4
    anchor_x: 'center'
    anchor_y: 'center'
